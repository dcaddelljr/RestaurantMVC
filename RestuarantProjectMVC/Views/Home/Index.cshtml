@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_AddLayout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Get a restaurant</h1>
    <p>Enter a Zip Code to get a restaurant.</p>
</div>


<div style="width: 20%; margin: 0 auto" class="text-center">
    <div class="form-row align-items-center">
        @using (Html.BeginForm("Index", "RestaurantMVC", FormMethod.Get))
        {
            <div class="form-group">
                <input type="text" name="ZipCode" class="form-control text-center" maxlength="5" />
            </div>
            <br />

            <input type="submit" value="Enter" class="btn btn-primary" />
        }
    </div>
</div>

