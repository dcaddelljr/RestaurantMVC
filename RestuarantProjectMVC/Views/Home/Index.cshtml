@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_AddLayout.cshtml";
}
<div class="container">
    <div class="text-center">
        <h1 class="display-4">Finding a restaurant by zip code.</h1>
    </div>

        <div class="container">
            <div class="text-center">
                <p>Enter a zip code to return a list of available restaurants.</p>
            </div>
                <div style="width: 20%; margin: 0 auto" class="text-center">
                    <div class="form-row align-items-center">
                        @using (Html.BeginForm("Index", "RestaurantMVC", FormMethod.Get))
                         {
                            <div class="form-group text-center shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                                <input type="text" name="ZipCode" placeholder="zip code" class="form-control text-center opacity-90" maxlength="5" />
                                <input type="hidden" name="Page" value="0" />
                                <br />
                                <input type="submit" value="Enter" class="btn btn-primary" />
                            </div>
                         }
                    </div>
               </div>
          </div>
</div>